// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  role    role     @default(USER)
  name    String?
  posts   post[]
  profile profile?
  groups   group[]    
}

model profile {
  id     Int   @id @default(autoincrement())
  bio    Json?
  userId Int   @unique
  user   user  @relation(fields: [userId], references: [id])
}

model post {
  id         Int        @id @default(autoincrement())
  title      String
  content    String?
  data       Json?
  published  Boolean    @default(false)
  authorId   Int
  author     user       @relation(fields: [authorId], references: [id])
  categories category[]
}

model category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts post[]
}

model group {
  id   Int    @id @default(autoincrement())
  name String @unique
  user   user  @relation(fields: [userGroup], references: [id])
}

enum role {
  USER
  ADMIN
}
